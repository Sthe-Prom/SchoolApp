@model SettingsViewModel

@{
    ViewData["Title"] = "Settings";
    Layout = "_Layout";
}

<div class="pagetitle">
    <h1>Manage Admin Settings</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="~/Home/Index">Home</a></li>
            <li class="breadcrumb-item active">Settings</li>
        </ol>
    </nav>
</div>

<section>
    
      <div class="row">
        <div class="col-lg-6">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Manage Application Statuses</h5>
                   <div class="form-group text-right">
                      <span><a href="~/Status/Add" class="btn btn-outline-info">Add New Application Status</a></span>                                                             
                      <hr />
                  </div>
                  <table class="table table-striped table-responsive-lg table-bordered table-sm grid_print">
                      <tr>                                                          
                          <th class="text-center">#</th> 
                          <th class="text-center">Status Name</th>                                   
                          <th class="text-center text-info h5">Action</th>      
                          
                      </tr>
                  
                          @foreach (var item in Model.Statuses)
                          {
                              <tr>                                                        
                                  <td class="text-left">@item.StatusID</td>
                                  <td class="text-left">@item.StatusName</td>
                                  <td class="text-center">
                                   
                                       <form asp-action="Delete" method="post" method="post">
                                            <a class="" 
                                                asp-action="Edit"
                                                asp-route-StatusID="@item.StatusID">
                                                    <i class="bi-pencil" style="color: #00675A;"></i>&nbsp;
                                            </a> 
                                            <a type="submit"
                                                    class="">
                                                <i class="bi-trash-fill" style="color: #A71930;" aria-hidden="true"></i>
                                            </a>
                                            <input type="hidden" name="StatusID" value="@item.StatusID" />

                                        </form>
                                  </td>
                              </tr>
                          }
                  </table>


            </div>
          </div>

        </div>

        <div class="col-lg-6">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Manage Appeal Reasons</h5>
                  <div class="form-group text-right">
                      <span><a href="~/AppealReason/Add" class="btn btn-outline-info">Add New Appeal Reason</a></span>                                                             
                      <hr />
                  </div>
                  <table class="table table-striped table-responsive-lg table-bordered table-sm grid_print">
                      <tr>                                                          
                          <th class="text-center">#</th> 
                          <th class="text-center">Appeal Reason</th>                                   
                          <th class="text-center text-info h5">Action</th>      
                          
                      </tr>
                  
                          @foreach (var item in Model.AppealReasons)
                          {
                              <tr>                                                        
                                  <td class="text-left">@item.AppealReasonID</td>
                                  <td class="text-left">@item.AppealReasonName</td>
                                  <td class="text-center">
                                     
                                       <form asp-action="Delete" method="post" method="post">
                                            <a class="" 
                                                asp-action="Edit"
                                                asp-route-AppealReasonID="@item.AppealReasonID">
                                                    <i class="bi-pencil" style="color: #00675A;"></i>&nbsp;
                                            </a> 
                                            <a type="submit"
                                                    class="">
                                                <i class="bi-trash-fill" style="color: #A71930;" aria-hidden="true"></i>
                                            </a>
                                            <input type="hidden" name="QuestionSubsectionID" value="@item.AppealReasonID">

                                        </form>
                                    </td>
                              </tr>
                          }
                  </table>
            </div>
          </div>

        </div>
      </div>
        
</section>