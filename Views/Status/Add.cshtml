@model Status

@{
    ViewData["Title"] = "Add Status";
    Layout = "_Layout";
}

<div class="pagetitle">
    <h1>Add Status</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="~/Home/Index">Home</a></li>
            <li class="breadcrumb-item active">Status</li>
        </ol>
    </nav>
</div>

<section>
     <div class="col-lg-8">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Add Application Status</h5>
                <form asp-action="Add" method="post">
                  <div class="row mb-3">
                      <label asp-for="StatusName" class="col-form-label">Status Name</label>
                      <div class="col-md-12">
                          <input asp-for="StatusName" class="form-control" type="text" />           
                      </div>
                      <span asp-validation-for="StatusName" class="text-danger"></span>
                  </div>
                  <div class="row mb-3">
                      <div class="col-sm-8">
                          <div class="text-center">
                              <button type="submit" class="btn btn-primary">Save Status</button>
                              <a asp-action="Settings" asp-controller="Settings" class="btn btn-secondary">Cancel</a>
                          </div>
                      </div>                                 
                  </div>
                </form>

            </div>
          </div>

        </div>
</section>